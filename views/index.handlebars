<h1>Burgerville!</h1>



<div class="container">
  <div class = "row">


  <div class="col-4 burgers">

    <h2>Burgers needed to Eat!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class="col-4">
    <img class="image rounded img-fluid" src = "./assets/img/burger.jpg" alt="Responsive Image">
  </div>
  <div class="col-4 burgers">

    <h2>Burgers that are eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block}}
      {{/if}}
      {{/each}}
    </ul>

  </div>
  </div>
</div>

<div class ="bottom-stuff">

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Type:</label>
    <input type="text" id="burger" name="name">
  </div>



  <button type="submit">Add Burger</button>
</div>
</form>